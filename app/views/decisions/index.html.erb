<p id="notice"><%= notice %></p>

<h1>Decisions</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Decision text</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decisions.each do |decision| %>
      <tr>
        <td><%= decision.location %></td>
        <td><%= decision.decision_text %></td>
        <td><%= decision.user_id %></td>

        <td><%= link_to 'Show', decision %></td>
        <td><%= link_to 'Edit', edit_decision_path(decision) %></td>
        <td><%= link_to 'Destroy', decision, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>
  </li>
<% end %>

<br>

<%= link_to 'New Decision', new_decision_path %>
